---
interface Props {
	src: any; // TODO: ??
	alt: string;
	caption?: string;
	fullwidth?: boolean;
}

import { Image } from 'astro:assets'

const { src, alt, caption, fullwidth = false } = Astro.props

const classString = `polaroid ${fullwidth && ' fullwidth'}`
---
<Image class={classString} src={src} alt={alt}/>
{caption && <figcaption>{caption}</figcaption>}

<style lang="scss">
	.polaroid {
		box-sizing: border-box;
		border: 1rem solid #dedcef;
		width: 60%;
		display: block;
		margin: auto;
		height: auto;
		border-radius: 5px;
		box-shadow: 0 0 10px 2px grey;

		&.fullwidth {
			width: 100%;
		}

		&:nth-of-type(even) {
			rotate: 3deg;
		}

		&:nth-of-type(odd) {
			rotate: -2deg;
		}
	}
</style>